@model Bupa.Admin.Models.ProductAdd

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
<h1>Poliçe Ekleme</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="product_Id" class="control-label"> Poliçe Numarası</label>
                <input asp-for="product_Id" class="form-control" />
                <span asp-validation-for="product_Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="product_Name" class="control-label"> Poliçe Adı</label>
                <input asp-for="product_Name" class="form-control" />
                <span asp-validation-for="product_Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="price" class="control-label">Poliçe Fiyatı</label>
                <input asp-for="price" class="form-control" />
                <span asp-validation-for="price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="description" class="control-label"> Poliçe Açıklaması</label>
                <input asp-for="description" class="form-control" />
                <span asp-validation-for="description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
</div>
